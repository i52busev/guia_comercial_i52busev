{% extends 'cliente/index.html.twig' %}

{% block title %}{{parent()}} - Notificaciones activas{% endblock %}

{% block body %}

{{parent()}}

{% if comercios is not same as("") and comercios is not null and comercios is not empty %}
<div class="container h-100 " style="margin-top:40px">
    <h1 style="color:black"><center>Comercios con notificaciones activadas<center></h1>
    <table id="tbComercio" class="table table-hover table-sm" style="border: 10px ridge SlateBlue;">
        <thead style="border-bottom-style:2px solid #24a690;">
            <tr>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Código Postal</th>
                <th>Teléfono</th>
                <th>Web</th>
                <th style="width:20%"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                    <div class="scrollit">
                            {% for comercio in comercios %}
                                <tr id ='{{comercio.id}}'>
                                    <td>{{comercio.nombreComercio}}</td>
                                    <td>{{comercio.direccionComercio}}</td>
                                    <td>{{comercio.codigoPostal}}</td>
                                    <td>{{comercio.telefonoComercio}}</td>
                                    <td>{{comercio.webComercio}}</td>
                                    <td style="width:19%" align="center">                                   
                                        <button type="button" class="btn btn-link" onclick="location.href='{{ path('consultarComercioCli', {id: comercio.id})}}'"><img height="24px" src="{{ asset('images/about.png') }}" title="Consultar"/></button>
                                    </td> 
                                </tr>
                            {% endfor %}
                    </div>
               </td>
            </tr>
        </tbody>
    </table>
    <div class="container h-100 " style="margin-top:40px">
    <div class="form-row">
        <div id="boton_volver" class="form-group col-md-6">
            <button type="button" class="btn btn-default" onclick="history.back()">Volver</button>
        </div>
    </div>
    </div>
</div>
{% else %}
<div class="container h-100 " style="margin-top:40px">
    <p style="text-align:center">Actualmente no tiene ningún comercio con las notificaciones activadas</p>
    <button type="button" class="btn btn-default" onclick="history.back()">Volver</button>
</div>
{% endif %}

{% endblock %}

{% block content %}
{% endblock %}