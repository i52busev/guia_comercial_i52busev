{% extends 'empresario/index.html.twig' %}

{% block title %}{{parent()}} - Buscar Empresa{% endblock %}

{% block body %}

{{parent()}}

{% if empresas is not same as("") and empresas is not null and empresas is not empty %}
<div class="container h-100 " style="margin-top:40px">
    <table id="tbEmpresa" class="table table-hover table-sm" style="border: 10px ridge SlateBlue;">
        <thead style="border-bottom-style:2px solid #24a690;">
            <tr>
                <th>Nombre</th>
                <th>CIF</th>
                <th>Dirección</th>
                <th>Localidad</th>
                <th>Provincia</th>
                <th>Código Postal</th>
                <th>Teléfono</th>
                <th>Actividad Económica</th>
                <th>Validez</th>
                <th style="width:20%"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                    <div class="scrollit">
                            {% for empresa in empresas %}
                                <tr id ='{{empresa.id}}'>
                                    <td>{{empresa.nombreEmpresa}}</td>
                                    <td>{{empresa.cif}}</td>
                                    <td>{{empresa.direccionEmpresa}}</td>
                                    <td>{{empresa.localidadEmpresa}}</td>
                                    <td>{{empresa.provinciaEmpresa}}</td>
                                    <td>{{empresa.cpEmpresa}}</td>
                                    <td>{{empresa.telefonoEmpresa}}</td>
                                    <td>{{empresa.actividadEconomica}}</td>
                                    <td>{{empresa.validez}}</td>
                                    <td style="width:19%" align="center">                                   
                                        <button type="button" class="btn btn-link" onclick="location.href='{{ path('consultarEmpresaEmp', {id: empresa.id})}}'"><img height="24px" src="{{ asset('images/about.png') }}" title="Consultar"/></button>
                                        <button type="button" class="btn btn-link" onclick="location.href='{{ path('modificarEmpresaEmp', {id: empresa.id})}}'"><img height="24px" src="{{ asset('images/contract.png') }}" title="Modificar"/></button> 
                                        <button type="button" class="btn btn-link" onclick="location.href='{{ path('eliminarEmpresaEmp', {id: empresa.id})}}'"><img height="24px" src="{{ asset('images/garbage.png') }}" title="Eliminar"/></button> 
                                    </td> 
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
               </td>
            </tr>
        </tbody>
    </table>
    <div class="container h-100 " style="margin-top:40px">
    <div class="form-row">
        <div id="boton_volver" class="form-group col-md-6">
            <button type="button" class="btn btn-default" onclick="history.back()">Volver</button>
        </div>
    </div>
    </div>
</div>
{% else %}
<div class="container h-100 " style="margin-top:40px">
    <p style="text-align:center">No se ha encontrado ninguna empresa que satisfaga los criterios seleccionados</p>
        <div id="boton_volver" class="form-group col-md-6">
            <button type="button" class="btn btn-default" onclick="history.back()">Volver</button>
        </div>
</div>
{% endif %}

{% endblock %}

{% block content %}
{% endblock %}
